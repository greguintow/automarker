{
	"name": "automarker",
	"main": "index.js",
	"version": "1.0.0",
	"description": "A tiny (142 bytes) highlighter",
	"author": "Greg Teixeira <thunderdance6@gmail.com>",
	"license": "ISC",
	"sideEffects": false,
	"peerDependencies": {
		"preact": "^10.0.0",
		"react": "^16.8.0"
	},
	"peerDependenciesMeta": {
		"preact": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	},
	"scripts": {
		"start": "nodemon --watch \"src/\" --exec \"ts-node src/index.ts\" -e ts",
		"dev": "nodemon",
		"size": "size-limit",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/greguintow/automarker.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"size-limit": [
		{
			"name": "core",
			"path": "index.js",
			"limit": "142 B"
		},
		{
			"name": "core + react hook",
			"path": "react/index.js",
			"limit": "183 B",
			"ignore": [
				"react"
			]
		},
		{
			"name": "core + preact hook",
			"path": "preact/index.js",
			"limit": "183 B",
			"ignore": [
				"preact/hooks"
			]
		}
	],
	"dependencies": {},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^4.5.3",
		"@types/jest": "^26.0.4",
		"@types/node": "^14.0.18",
		"@typescript-eslint/eslint-plugin": "^3.6.0",
		"@typescript-eslint/parser": "^3.6.0",
		"eslint": "^7.4.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-typescript": "^2.0.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prettier": "^3.1.4",
		"jest": "^26.1.0",
		"preact": "^10.4.4",
		"prettier": "^2.0.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"size-limit": "^4.5.3",
		"typescript": "^3.9.6"
	}
}
